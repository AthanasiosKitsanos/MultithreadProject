{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Threads",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/Multithreading/Src/threads.cpp",
                "${workspaceFolder}/Multithreading/Classes/Threads/functions.cpp",
                "-I${workspaceFolder}/Multithreading/Headers",
                "-I${workspaceFolder}/Multithreading/Classes/Threads",
                "-o",
                "${workspaceFolder}/Multithreading/Build/threads.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[
                "$gcc"
            ]
        },

